{
  "name": "component-library",
  "version": "0.1.0",
  "private": true,
  "main": "./index.ts",
  "types": "./index.ts",
  "exports": {
    ".": {
      "types": "./index.ts",
      "import": "./index.ts",
      "require": "./index.ts"
    },
    "./components": {
      "types": "./components/index.ts",
      "import": "./components/index.ts",
      "require": "./components/index.ts"
    },
    "./components/*": {
      "types": "./components/*/index.ts",
      "import": "./components/*/index.ts",
      "require": "./components/*/index.ts"
    },
    "./utils": {
      "types": "./components/utils/index.ts",
      "import": "./components/utils/index.ts",
      "require": "./components/utils/index.ts"
    },
    "./types": {
      "types": "./components/types/index.ts",
      "import": "./components/types/index.ts",
      "require": "./components/types/index.ts"
    }
  },
  "sideEffects": false,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "next": "15.4.1",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@axe-core/react": "^4.10.2",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/jest-axe": "^3.5.9",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.21",
    "axe-core": "^4.10.2",
    "eslint": "9.31.0",
    "eslint-config-next": "15.4.2",
    "jest": "^30.0.4",
    "jest-axe": "^9.0.0",
    "jest-environment-jsdom": "^30.0.4",
    "tailwindcss": "^4.1.11",
    "typescript": "^5"
  }
}
